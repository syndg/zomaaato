generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String       @id @unique
  name        String
  email       String
  imageUrl    String?
  reviews     Review[]
  restaurants Restaurant[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([email, name])
}

model Restaurant {
  id          String                  @id @default(uuid())
  name        String
  description String
  lat         String
  lng         String
  ownerId     String
  owner       User                    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  images      RestaurantImages[]
  timings     RestaurantTypeTimings[]
  reviews     Review[]
  items       Item[]

  @@index([ownerId])
}

model RestaurantImages {
  id           String     @id @default(uuid())
  imageUrl     String
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
}

enum RestaurantType {
  DINEIN
  DELIVERY
  BOTH
}

model RestaurantTypeTimings {
  id           String         @id @default(uuid())
  days         String[]
  timingSlots  String[]
  type         RestaurantType
  cuisines     String[]
  categories   String[]
  restaurantId String
  restaurant   Restaurant     @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
}

model Review {
  id           String     @id @default(uuid())
  description  String?
  rating       Int
  authorId     String
  author       User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes        Int        @default(0)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([authorId, restaurantId])
}

enum ItemType {
  VEG
  NONVEG
}

model Item {
  id           String       @id @default(uuid())
  name         String
  price        Int
  description  String?
  imageUrl     String?
  type         ItemType
  categoryId   String
  category     ItemCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  restaurantId String
  restaurant   Restaurant   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([categoryId, restaurantId])
}

model ItemCategory {
  id    String @id @default(uuid())
  name  String
  items Item[]
}
