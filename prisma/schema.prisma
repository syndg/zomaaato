generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @unique
  name      String
  email     String
  imageUrl  String?
  reviews   Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, name])
}

model Restaurant {
  id          String   @id @default(uuid())
  name        String
  description String?
  address     String
  images      String[]
  reviews     Review[]
  items       Item[]
}

model Review {
  id           String     @id @default(uuid())
  description  String?
  rating       Int
  authorId     String
  author       User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes        Int        @default(0)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Item {
  id           String       @id @default(uuid())
  name         String
  price        Int
  description  String?
  imageUrl     String?
  categoryId   String
  category     ItemCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  restaurantId String
  restaurant   Restaurant   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
}

model ItemCategory {
  id    String @id @default(uuid())
  name  String
  items Item[]
}
